<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegistrationActivity">


    <EditText
        android:id="@+id/registration_user_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/style_of_edit_texts_login_activity"
        android:fontFamily="sans-serif-light"
        android:hint="@string/user_name_hint_text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_textView" />

    <EditText
        android:id="@+id/registration_user_password_edit_text"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:background="@drawable/style_of_edit_texts_login_activity"
        android:fontFamily="sans-serif-light"
        android:hint="@string/user_password_hint_text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/registration_user_name_edit_text"
        app:layout_constraintStart_toStartOf="@+id/registration_user_name_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/registration_user_name_edit_text" />


    <Button
        android:id="@+id/registration_user_button"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_of_sign_up_button"
        android:text="Регистрация"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_user_password_edit_text" />

    <TextView
        android:id="@+id/registration_textView"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="Выберите имя пользователя и пароль"
        android:textAlignment="center"
        android:textColor="#505050"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>